<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayoutResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mostrar Salario Bruto -->
        <TextView
            android:id="@+id/tvSalarioBruto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salario Bruto Anual: "
            android:textSize="18sp" />

        <!-- Mostrar Salario Neto -->
        <TextView
            android:id="@+id/tvSalarioNeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salario Neto Anual: "
            android:textSize="18sp" />

        <!-- Retención de IRPF -->
        <TextView
            android:id="@+id/tvRetencionIRPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retención de IRPF: "
            android:textSize="18sp" />

        <!-- Posibles Deducciones -->
        <TextView
            android:id="@+id/tvDeducciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deducciones Aplicadas: "
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
